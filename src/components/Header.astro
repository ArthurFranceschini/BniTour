        background: #f5f5f5 !important;
    }

    .lang-option.active,
    .mobile-lang-option.active {
        background: #f0f0f0 !important;
        font-weight: 500 !important;
    }

    .lang-option:first-child,
    .mobile-lang-option:first-child {
        border-radius: 8px 8px 0 0 !important;
