---
import { ChevronRight } from 'lucide-astro';
---

<main>
  <section id="Hero" class="section-padding section-reveal">
    <div 
      id="hero-carousel"
      class="min-h-screen bg-cover bg-center bg-no-repeat rounded-xl overflow-hidden relative transition-all duration-700"
      style="background-image: url('Hero-bg1.webp');">
    
